#include<stdio.h>
void main()
{
    int rows=5;
    int i,j,k;
    for(i=0;i<rows;i++)
    {
        for(j=0;j<2*(rows-i)-1;j++)
        {
            printf(" ");
        }
        for(k=0;k<2*i+1;k++)
        {
            printf("* ");
        }
        printf("\n");
    }

for(i=1;i<rows;i++)
{
    for(j=0;j<2*i+1;j++)
    {
        printf(" ");
    
    }
    for(k=1;k<=2*(rows-i)-1;k++)
    {
        printf("* ");
        
    }
    printf("\n");
}
}
